{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://arep.dev/schemas/manifest.json",
  "title": "AREP Discovery Manifest",
  "description": "Schema for /.well-known/arep discovery endpoint",
  "type": "object",
  "required": ["arep"],
  "properties": {
    "arep": {
      "type": "object",
      "required": ["version", "provider", "capabilities"],
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}$",
          "description": "AREP specification version (e.g., 2026-01)"
        },
        "provider": {
          "type": "object",
          "required": ["name", "type"],
          "properties": {
            "name": {
              "type": "string",
              "description": "Provider display name"
            },
            "type": {
              "type": "string",
              "enum": ["marketplace", "mls", "property_manager", "brokerage", "aggregator"],
              "description": "Provider type"
            },
            "transaction_types": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["rental", "sale"]
              },
              "description": "Supported transaction types"
            },
            "regions": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Supported regions (ISO 3166-1 alpha-2)"
            }
          }
        },
        "capabilities": {
          "type": "object",
          "description": "Supported AREP capabilities",
          "properties": {
            "discovery": {
              "$ref": "#/$defs/capability"
            },
            "pricing": {
              "$ref": "#/$defs/capability"
            },
            "offer": {
              "allOf": [
                { "$ref": "#/$defs/capability" },
                {
                  "type": "object",
                  "properties": {
                    "supported_types": {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "enum": ["rental_application", "purchase_offer"]
                      }
                    }
                  }
                }
              ]
            },
            "transaction": {
              "$ref": "#/$defs/capability"
            }
          }
        },
        "extensions": {
          "type": "object",
          "description": "Supported extensions (keyed by namespace)",
          "additionalProperties": {
            "$ref": "#/$defs/capability"
          }
        },
        "transports": {
          "type": "object",
          "description": "Available transport bindings",
          "properties": {
            "rest": {
              "type": "object",
              "properties": {
                "endpoint": {
                  "type": "string",
                  "format": "uri",
                  "description": "REST API base URL"
                }
              },
              "required": ["endpoint"]
            },
            "mcp": {
              "type": "object",
              "properties": {
                "endpoint": {
                  "type": "string",
                  "format": "uri",
                  "description": "MCP server endpoint"
                }
              },
              "required": ["endpoint"]
            },
            "a2a": {
              "type": "object",
              "properties": {
                "agent_card": {
                  "type": "string",
                  "format": "uri",
                  "description": "A2A Agent Card URL"
                }
              },
              "required": ["agent_card"]
            }
          }
        }
      }
    }
  },
  "$defs": {
    "capability": {
      "type": "object",
      "required": ["version"],
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}$",
          "description": "Capability version"
        }
      }
    }
  }
}
